{
  "name": "forklift-mtv",
  "version": "0.0.1",
  "description": "OpenShift VM Migration Monorepo",
  "repository": "https://github.com/konveyor/forklift-ui.git",
  "license": "Apache",
  "private": true,
  "workspaces": {
    "packages": [
      "modules/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "start:ui:dev:remote": "lerna run start:dev:remote --stream",
    "start:ui:dev:mock": "lerna run start:dev:mock",
    "start:api:dev:remote": "lerna run start:api:dev:remote --stream",
    "start:api:dev:mock": "lerna run start:api:dev:mock --stream",
    "build": "lerna run build",
    "start": "./scripts/start-dev.sh",
    "build:api": "lerna run build:api",
    "build:ui": "lerna run build:ui",
    "print:api:config": "lerna run print:api:config",
    "print:ui:config": "lerna run print:ui:config"
  },
  "devDependencies": {
    "@types/node": "^16.7.10",
    "concurrently": "^6.2.1",
    "lerna": "^4.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "yarn": "^1.22.11"
  }
}
